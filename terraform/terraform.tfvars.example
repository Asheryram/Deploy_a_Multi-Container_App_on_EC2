# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

aws_region       = "us-east-1"
environment      = "dev"
instance_type    = "t2.micro"

# AMI ID - Amazon Linux 2 (update for your region)
# Find AMI IDs: https://aws.amazon.com/amazon-linux-ami/
# us-east-1: ami-0c02fb55956c7d316
# eu-central-1: ami-0a261c0e5f51090b1
ami_id           = "ami-0c02fb55956c7d316"

# Key Pair Options
# Option 1: Let Terraform create a new key pair (recommended)
create_key_pair  = true
key_path         = "."  # Where to save the .pem file

# Option 2: Use an existing key pair
# create_key_pair = false
# key_name        = "your-existing-key-name"

allowed_ssh_cidr = "0.0.0.0/0"  # Replace with your IP: "x.x.x.x/32"
frontend_port    = 3000
app_port         = 5000
volume_size      = 20
repo_url         = "https://github.com/YOUR_USERNAME/Deploy_a_Multi-Container_App_on_EC2.git"

# Auto-start configuration
auto_start       = true  # Set to false to manually start after SSH

# Database credentials (CHANGE THESE IN PRODUCTION!)
# For better security, use environment variables:
#   export TF_VAR_db_root_password="your-secure-password"
#   export TF_VAR_db_password="your-secure-password"
db_root_password = "rootpassword123!"
db_name          = "appdb"
db_user          = "appuser"
db_password      = "apppassword123!"
